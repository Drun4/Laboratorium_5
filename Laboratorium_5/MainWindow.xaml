<Window x:Class="Laboratorium_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laboratorium_5"
        mc:Ignorable="d" FontSize="18" 
        Title="Ski equipment rental" Height="400" Width="750">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2.5*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" BorderThickness="1" BorderBrush="Black"/>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="12*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Column="1" Grid.Row="0" Background="LightGray"/>
            <Border BorderThickness="1" BorderBrush="Black">
                <TextBlock Grid.Column="1" Grid.Row="0" Text="Person list"
                       HorizontalAlignment="Center" VerticalAlignment="Center">
                </TextBlock>
            </Border>
            <ListBox x:Name="lstbx_people" Grid.Row="1" FontSize="14" Margin="10">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding FullInfo}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" BorderThickness="0.5" BorderBrush="Black"
                    VerticalAlignment="Top" HorizontalAlignment="Stretch"/>
            <Border Grid.Row="0" BorderThickness="0.5" BorderBrush="Black"
                    VerticalAlignment="Stretch" HorizontalAlignment="Right"/>
            <Border Grid.Row="1" BorderThickness="0.5" BorderBrush="Black" 
                    VerticalAlignment="Bottom" HorizontalAlignment="Stretch"/>
            <Border Grid.Row="1" BorderThickness="0.5" BorderBrush="Black"
                    VerticalAlignment="Stretch" HorizontalAlignment="Right"/>
            <Border Grid.Row="1" BorderThickness="0.5" BorderBrush="Black"
                    VerticalAlignment="Top" HorizontalAlignment="Stretch"/>
            
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Name" FontSize="13" 
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBox x:Name="txt_name" Grid.Column="1" Margin="4" FontSize="13"/>
                    <Border Grid.Column="0" BorderThickness="0.1" 
                            BorderBrush="Black" HorizontalAlignment="Right"/>
                    <Border Grid.Column="1" BorderThickness="0.5" 
                            BorderBrush="Black" HorizontalAlignment="Right"/>
                </Grid>
                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Surname" FontSize="13" 
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBox x:Name="txt_surname" Grid.Column="1" Margin="4" FontSize="13"/>
                    <Border Grid.Column="0" BorderThickness="0.1" 
                            BorderBrush="Black" HorizontalAlignment="Right"/>
                    <Border Grid.Column="1" BorderThickness="0.5" 
                            BorderBrush="Black" HorizontalAlignment="Right"/>
                </Grid>
                <Grid Grid.Column="2">
                    <Button x:Name="btn_add" Content="Add" FontSize="13" Click="btn_add_Click"/>
                </Grid>
            </Grid>
        </Grid>

        <!--<StackPanel Grid.Column="2" Grid.Row="1" Grid.RowSpan="3" 
                    Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Height="40">
                <TextBlock Text="Name:" FontSize="32"/>
                <TextBox x:Name="txt_Name" Width="100"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="40">
                <TextBlock Text="Surname:" FontSize="32"/>
                <TextBox x:Name="txt_Surname" Width="100"/>
            </StackPanel>
        </StackPanel>-->

        <!--<Button x:Name="btn_sayHello" Grid.Column="5" Grid.Row="5" Content="Press me"
                FontSize="20" BorderBrush="Violet" Margin="5" 
                BorderThickness="2" Background="#FFECECEC" Click="btn_sayHello_Click"/>-->
    </Grid>
</Window>
